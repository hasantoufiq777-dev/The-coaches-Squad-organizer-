<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="dashboardRoot" prefHeight="300" prefWidth="500" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coachteam.controller.DashboardController">

    <children>
        <VBox alignment="CENTER" spacing="35" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">


            <Label styleClass="login-title" text="Dashboard">
            <font>
               <Font name="System Bold" size="27.0" />
            </font></Label>


            <HBox alignment="CENTER" spacing="40">
                <Label style="-fx-text-fill: white; -fx-font-size: 20;" text="Players:" />
                <Label fx:id="totalPlayersLabel" style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="0" />
            </HBox>

            <HBox alignment="CENTER" spacing="40">
                <Label style="-fx-text-fill: white; -fx-font-size: 20;" text="Managers:" />
                <Label fx:id="totalManagersLabel" style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" text="0" />
            </HBox>

        </VBox>
    </children>

</AnchorPane>
